generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campaign {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  offers      Offer[]
}

model Offer {
  id          String   @id @default(cuid())
  campaignId  String
  name        String
  description String?
  payout      Float
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  clicks      Click[]
  leads       Lead[]
}

model Click {
  id        String   @id @default(cuid())
  offerId   String
  subId     String?
  country   String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
  offer     Offer    @relation(fields: [offerId], references: [id])
}

model Lead {
  id          String   @id @default(cuid())
  offerId     String
  networkId   String?
  externalId  String?
  subId       String?
  country     String
  revenue     Float
  status      String   @default("approved")
  createdAt   DateTime @default(now())
  offer       Offer    @relation(fields: [offerId], references: [id])
  network     CPANetwork? @relation(fields: [networkId], references: [id])
}

model CPANetwork {
  id          String   @id @default(cuid())
  name        String   // clickdealer, trafee, adverten, etc
  displayName String?
  apiKey      String?
  apiSecret   String?
  postbackUrl String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  offers      NetworkOffer[]
  leads       Lead[]
}

model NetworkOffer {
  id          String   @id @default(cuid())
  networkId   String
  externalId  String   // ID from the CPA network
  name        String
  payout      Float
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  network     CPANetwork @relation(fields: [networkId], references: [id])
  clicks      NetworkClick[]
}

model NetworkClick {
  id          String   @id @default(cuid())
  offerId     String
  networkId   String
  subId       String?
  country     String
  ip          String?
  userAgent   String?
  createdAt   DateTime @default(now())
  offer       NetworkOffer @relation(fields: [offerId], references: [id])
}